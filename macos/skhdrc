# reload yabai
alt + shift - c : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

# application Shortcuts
# alt - "enter" : open -na /Applications/Ghostty.app

# focus window in bsp mode
alt - j : yabai -m window --focus west
alt - k : yabai -m window --focus south
alt - l : yabai -m window --focus north
alt - 0x29 : yabai -m window --focus east # semicolon

# switch spaces
alt - m : yabai -m space --focus recent
alt - n : yabai -m space --focus next
alt - p : yabai -m space --focus prev
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
alt - 5 : yabai -m space --focus 5
alt - 6 : yabai -m space --focus 6
alt - 7 : yabai -m space --focus 7
alt - 8 : yabai -m space --focus 8
alt - 9 : yabai -m space --focus 9
alt - 0 : yabai -m space --focus 10
