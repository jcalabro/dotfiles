# reload yabai
alt + shift - c : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

# application Shortcuts
alt - enter : open -na /Applications/Alacritty.app

# focus window in bsp mode
alt - j: yabai -m window --focus west
alt - k: yabai -m window --focus south
alt - l: yabai -m window --focus north
# alt - l: yabai -m window --focus east # TODO

# switch spaces
ctrl - m : yabai -m space --focus recent
# ctrl - m : yabai -m space --focus next # TODO
# ctrl - m : yabai -m space --focus prev # TODO
ctrl - 1 : yabai -m space --focus 1
ctrl - 2 : yabai -m space --focus 2
ctrl - 3 : yabai -m space --focus 3
ctrl - 4 : yabai -m space --focus 4
ctrl - 5 : yabai -m space --focus 5
ctrl - 6 : yabai -m space --focus 6
ctrl - 7 : yabai -m space --focus 7
ctrl - 8 : yabai -m space --focus 8
ctrl - 9 : yabai -m space --focus 9
ctrl - 0 : yabai -m space --focus 10
