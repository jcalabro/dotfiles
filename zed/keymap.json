[
  {
    "context": "Workspace",
    "bindings": {
      "cmd-shift-t": "workspace::NewCenterTerminal"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-n": ["workspace::SendKeystrokes", "ctrl-w w"],
      "ctrl-c": ["workspace::SendKeystrokes", "alt-cmd-down"],
      "ctrl-q": ["workspace::SendKeystrokes", "cmd-w"],
      "ctrl-s": "workspace::Save",
      "ctrl-d": "pane::CloseActiveItem",
      "ctrl-k": "pane::SplitVertical",
      "ctrl-x": "pane::SplitHorizontal",
      "g s": ["workspace::SendKeystrokes", "^"],
      "g l": ["workspace::SendKeystrokes", "$"]
    }
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "j j": ["workspace::SendKeystrokes", "escape"],
      "j k": ["workspace::SendKeystrokes", "escape"]
    }
  }
]
